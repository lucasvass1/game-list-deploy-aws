generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  createdAt DateTime    @default(now())

  games       Game[]
  categories  Category[]
  plataforms  Plataform[]

  @@map("users")
}

model Category {
  id          String      @id @default(uuid())
  title       String      @unique
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  userId      String
  user        User        @relation(fields: [userId], references: [id])

  games       Game[]

  @@map("category")
}

model Plataform {
  id              String      @id @default(uuid())
  title           String      @unique
  imageUrl        String?   
  company         String?
  acquisitionYear DateTime? 
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  userId          String
  user            User        @relation(fields: [userId], references: [id])

  games           Game[]

  @@map("plataform")
}

enum GameStatus {
  PLAYING
  DONE
  ABANDONED
}

model Game {
  id          String      @id @default(uuid())
  title       String      @unique
  status      GameStatus
  isFavorite  Boolean     @default(false) // <-- Novo campo

  userId      String
  user        User        @relation(fields: [userId], references: [id])

  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])

  plataformId String?     
  plataform   Plataform?  @relation(fields: [plataformId], references: [id])

  imageUrl    String?
  description String?
  endDate     DateTime?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("games")
}
