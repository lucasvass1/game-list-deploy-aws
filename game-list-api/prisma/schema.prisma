generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  password String

  @@map("users")
}


model Category {
  id        String      @id @default(uuid())
  title     String      @unique
  createdAt DateTime    @default(now())
  updatedAt  DateTime   @updatedAt
  description String?

  games       Game[]

  @@map("category")
}

model Plataform {
  id          String      @id @default(uuid())
  title       String      @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime   @updatedAt
  imageUrl    String?   
  company     String?
  acquisitionYear   DateTime? 

  games           Game[]

  @@map("plataform")
}

enum GameStatus {
  PLAYING
  DONE
  ABANDONED
}

model Game {
  id          String      @id @default(uuid())
  title       String
  status      GameStatus

  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])

  plataformId String?     
  plataform   Plataform?  @relation(fields: [plataformId], references: [id])

  imageUrl    String?
  description String?
  endDate     DateTime?

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("games")
}