{
  "compilerOptions": {
    /* Diretórios de entrada e saída */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Linguagem e ambiente */
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",

    /* Alias de importação */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Regras e verificações */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
